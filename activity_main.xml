<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.platoonformationquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categoryOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#388E3C"
            android:text="@string/USMC_History"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/categoryTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:gravity="center"
            android:text="@string/Important_Marines"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/categoryThree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#388E3C"
            android:text="@string/Basic_Knowledge"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/categoryFour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#4CAF50"
            android:text="@string/M16A2"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/quizScore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="#81C784"
            android:text="@string/score_Quiz"
            android:textAllCaps="true" />


    </LinearLayout>

</LinearLayout>

