<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.platoonformationquiz.usmcHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_field1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where was the first amphbous landing?"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radiogroup_amphiblanding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radiobutton_amphibLanding"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_nasau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Nasau"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_tripoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Tripoli"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_normandy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Normandy"
                    android:textAllCaps="false" />

            </RadioGroup>

            <TextView
                android:id="@+id/question_field2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who was the first female Marine?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="radiobutton_firstfemale">

                <RadioButton
                    android:id="@+id/radio_hc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Hillary Clinton"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_omj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Opha Mae Johnson"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_rr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Rhona Rousey"
                    android:textAllCaps="false" />

            </RadioGroup>

            <TextView
                android:id="@+id/question_field3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is the most decorated Marine?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="radiobutton_mostdecorated">

                <RadioButton
                    android:id="@+id/radio_dandaly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Daniel Daly"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_johnbasilone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="John Basilone"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_chestypuller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="Chesty Puller"
                    android:textAllCaps="false" />


            </RadioGroup>

            <TextView
                android:id="@+id/question_field4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is the father of Marine Corps aviation?"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="radiobutton_usmcAviation">

                <RadioButton
                    android:id="@+id/radio_aacunnigham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Alfred A.Cunnigham"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_drewcarey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Drew Carey"
                    android:textAllCaps="false" />

                <RadioButton
                    android:id="@+id/radio_charlieChaplin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Charlie Chaplin"
                    android:textAllCaps="false" />

            </RadioGroup>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:onClick="submitHistory"
                android:text="Submit" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
